<div class="banner" style="background-image: url('<%= image_path("journey.jpg") %>');">
  <div class="container home">
    <h1>Catch your fullfilling journey</h1>
    <p>And find your travelling budy through a perfect match!</p>
      <%= form_tag destinations_path, method: :get do %>
      <div class="form-row">
          <%= text_field_tag :query,
          params[:query],
          class: "form-control home-input",
          placeholder: "Find a destination"
          %>
          <%= submit_tag "Go", class: "btn btn-warning" %>
        </div>
      <% end %>
  </div>
</div>
<br>

<div class="container-fluid cards">
    <h2>Destinations</h2>
  <div class="row">
    <% @destinations.first(3).each do |d| %>
      <div class="col-4 mb-3">
        <%= link_to destinations_path(d) do %>
          <div class="card-trip">
            <% unless d.pictures.blank?  %>
           <%= cl_image_tag d.pictures.first.photo, height: 300, width: 400, crop: :fill %>
           <% end %>
            <div class="card-trip-infos">
              <h2><%= d.location %></h2>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

 <div class="container-fluid cards">
    <h2>Catchers</h2>
  <div class="row">
    <% @catchers.first(3).each do |c| %>
      <div class="col-4 mb-3">
        <%= link_to catchers_path(c) do %>
          <div class="card-trip">
            <% unless c.pictures.blank?  %>
           <%= cl_image_tag c.pictures.first.photo, height: 300, width: 400, crop: :fill %>
           <% end %>
            <div class="card-trip-infos">
              <h2><%= c.user_name %></h2>
              <p><%= c.gender %></p>
              <p><%= c.hobbies %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>


<div class="footer">
    <ul>
      <li><a href="#" > <i class="fab fa-facebook-square"></i> </a></li>
      <li><a href="#"> <i class="fab fa-github"></i> </a></li>
      <li><a href="#"> <i class="fab fa-instagram"></i> </a></li>
    </ul>
  <p>Trip Catcher was coded with love from Buzzkito Casablanca</p>
</div>


