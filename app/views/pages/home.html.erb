<div class="banner" style="background-image: url('<%= image_path("journey.jpg") %>');">
  <div class="container home">
    <h1 style='font-size:150px; font-family: "Travel Font"'>Trip Catcher</h1>
    <h1>Catch your fulfilling journey</h1>
    <p>And find your travelling buddy through a perfect match!</p>
      <%= form_tag destinations_path, method: :get do %>
      <div class="form-row">
          <%= text_field_tag :query,
          params[:query],
          class: "form-control home-input",
          placeholder: "Find a destination"
          %>
          <%= submit_tag "Go", class: "btn btn-warning" %>
        </div>
      <% end %>
  </div>
</div>
<br>
<div class="container-fluid cards">
  <h2 ><%= link_to "Destinations", destinations_path, class: "landing-page-titles" %></h2>
  <br>
  <div class="row">
    <% @destinations.first(3).each do |d| %>
      <div class="col-lg-4 col-sm-6 mb-3">
        <%= link_to destination_path(d) do %>
          <div class="card-trip">
            <% unless d.pictures.blank?  %>
           <%= cl_image_tag d.pictures.first.photo, height: 300, width: 400, crop: :fill %>
           <% end %>
            <div class="card-trip-infos">
              <h2><%= d.location %></h2>
              <p><strong><%= d.price %></strong> <i class="fas fa-euro-sign"></i></p>

            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<br>
<div class="container-fluid cards">
  <h2 ><%= link_to "Catchers", catchers_path, class: "landing-page-titles" %></h2>
  <br>
  <div class="row">
    <% @catchers.first(3).each do |c| %>
      <div class="col-lg-4 col-sm-6 mb-3">
        <%= link_to catcher_path(c) do %>
          <div class="card-trip">
            <% unless c.pictures.blank?  %>
           <%= cl_image_tag c.pictures.first.photo, height: 300, width: 400, crop: :fill %>
           <% end %>
            <div class="card-trip-infos">
              <h2><%= c.user_name %></h2>
              <p><%= c.gender %></p>
              <p><%= c.hobbies %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<br>
<div class="container-fluid cards">
  <h2 ><%= link_to "Stories", stories_path, class: "landing-page-titles" %></h2>
  <br>
  <div class="row">
    <% @stories.first(3).each do |s| %>
      <div class="col-lg-4 col-sm-6 mb-3">
        <%= link_to stories_path(s) do %>
          <div class="card-trip">
            <% unless s.pictures.blank?  %>
           <%= cl_image_tag s.pictures.first.photo, height: 300, width: 400, crop: :fill %>
           <% end %>
            <div class="card-trip-infos">
              <h2><%= s.title %></h2>
              <p><%= s.rating %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
