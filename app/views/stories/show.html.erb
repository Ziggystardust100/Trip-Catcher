<br>
<div class="container">
  <div class="card-trip-show-u">
  <% if @story.pictures.blank? %>
  <%= image_tag 'journey.jpg', class: "story-img", height: 500, width: 600, crop: :fill %>
  <% else %>
    <%= cl_image_tag @story.pictures.last.photo, class: 'story-img', height: 500, width: 600, crop: :fill %>

  <% end %>
    <div class="card-trip-infos m-3">
    <h3><%= @story.title %> @ <%= @story.destination.location %></h3>
    <p>Created by <strong><%= @story.catcher.user_name %></strong></p>
    <p>Rating: <% @story.rating.times do%>
      <i class="fas fa-feather-alt"></i>
    <% end %></p>
    <!-- <div class="separator"></div> -->
    <div class="spacer">
      <div class="mask"></div>
      <span><i></i></span>
    </div>
    <div class="story-content">
      <p><strong>Content:</strong>
        <br>
        <%= @story.content %></p>
    </div>
    <%= link_to "Back", stories_path, class: "btn btn-info m-3"%>

  <% if policy(@story).update? %>
    <%= link_to edit_story_path(@story), class: "btn btn-info mb-2 edit" do %><i class="fas fa-edit"></i>
    <% end %>
  <% end %>
    <% if policy(@story).destroy? %>
      <%= link_to story_path(@story), method: 'delete', class: 'btn btn-info mb-2 delete', data: {confirm: "Are you sure?"}  do %><i class="fas fa-trash"></i>
      <% end %>
    <% end %>

  </div>
</div>
<br>


