<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand not-blur" do %>
    <%= image_tag "logo-dark.svg" %>
    <% end %>

  <button class="navbar-toggler not-blur" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse not-blur" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if catcher_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Destinations", destinations_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Catchers", catchers_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Stories", stories_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Messages", stories_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <% unless current_catcher.pictures.empty? %>
          <%= cl_image_tag current_catcher.pictures.first.photo, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Messages", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_catcher_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_catcher_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>


