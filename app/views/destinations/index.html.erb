<br>
<div class="container">
 <h2 class="landing-page-titles" style="text-align: center">Destinations</h2>
<div id = "map-style">
  <div
    id="map"
    style="width: 100%;
    height: 300px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

<div class="container">
  <div class="row">
    <% @destinations.each do |d| %>
      <div class= "col-12 col-md-6 col-lg-4 py-4">
        <%= link_to destination_path(d) do %>
          <div class="card-trip">
            <% unless d.pictures.blank?  %>
              <%= cl_image_tag d.pictures.first.photo, height: 300, width: 400, crop: :fill %>
            <% end %>
            <div class="card-trip-infos">
              <h2><%= d.location %></h2>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
</div>

