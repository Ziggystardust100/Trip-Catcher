<% if @over_ten %>
 <%= link_to 'Show Previous', '?m=all' %>
<% end %>
<div>
 <% @messages.each do |message| %>
  <% if message.content %>
   <% catcher = Catcher.find(message.catcher_id) %>
   <div>
    <div>
     <div><strong><%= catcher.user_name %></strong>     <%= message.message_time %></div>
      <div>
       <div>
          <i class="fas fa-caret-right"></i>

         <span><%= message.content %></span>
          <% if message.read  %>
         <span><i class="fas fa-check"></i></span>
         <% end %>
      </div>
    </div>
   </div>
 </div>
 <% end %>
<% end %>
</div>
<%= form_for [@conversation, @message] do |f| %>
 <div>
   <%= f.text_area :content%>
 </div>
 <%= f.text_field :catcher_id, value: current_catcher.id, type: :hidden %>
 <div>
   <%= f.submit 'Add Reply'%>
 </div>
<% end %>
